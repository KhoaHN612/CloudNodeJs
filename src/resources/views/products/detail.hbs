<div class="container">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">{{prod.name}}</h2>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center p-3"><img src="/img/{{prod.image}}" class="img-fluid"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Toy description</h4>
                    <p>
                        {{prod.description}}
                    </p>
                    <h2 class="mt-5">
                        {{prod.price}} VND
                    </h2>

                    <form action="{{prod._id}}/addCart" method="POST">
                        <div class="mb-3">
                            <label for="quantiy" class="form-label">Quantity</label>
                            <input type="number" name="quantity" class="form-control"  value="1" min="1" title="Please buy at least one product" id="quantity">
                        </div>
                        <div class="mb-3">
                            <label for="shop" class="form-label">Shop</label>
                            <select class="form-select" name="shop" aria-label="--- Select Shop ----">
                                {{#each prod.storages}}
                                <option value="{{this.shop._id}}">{{this.shop.name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Add To Cart</button>
                    </form>

                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">General Info</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                                <tr>
                                    <td width="390">Manufacturer</td>
                                    <td>{{prod.manufacturer}}</td>
                                </tr>
                                <tr>
                                    <td>Material</td>
                                    <td>{{prod.material}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    body {
        background-color: #edf1f5;
    }


    .card {
        margin-bottom: 30px;
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid transparent;
        border-radius: 0;
    }

    .card .card-subtitle {
        font-weight: 300;
        margin-bottom: 10px;
        color: #8898aa;
    }

    .table-product.table-striped tbody tr:nth-of-type(odd) {
        background-color: #f3f8fa !important
    }

    .table-product td {
        border-top: 0px solid #dee2e6 !important;
        color: #728299 !important;
    }
</style>