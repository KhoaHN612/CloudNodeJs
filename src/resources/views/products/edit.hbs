<form class="m-4 mt-0" method="POST" action="" enctype="multipart/form-data">
  <div class="mb-3">
    <label for="name" class="form-label">Product Name</label>
    <input type="text" name="name" class="form-control" value="{{prod.name}}" id="name">
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Product Description</label>
    <textarea name="description" class="form-control" id="description">{{prod.description}}</textarea>
  </div>
  <div class="mb-3">
    <label for="manufacturer" class="form-label">Product Manufacturer</label>
    <input type="text" name="manufacturer" class="form-control" id="manufacturer" value="{{prod.manufacturer}}">
  </div>
  <div class="mb-3">
    <label for="material" class="form-label">Product Material</label>
    <input type="text" name="material" class="form-control" id="material" value="{{prod.material}}">
  </div>
  <div class="mb-3">
    <label for="formFile" class="form-label">Product Image</label>
    <br>
    <img src="/img/{{prod.image}}" class="img-fluid" style="max-height: 600px" alt="">
    <input name="image" class="form-control" type="file" id="formFile">
  </div>
  <div class="mb-3">
    <label for="price" class="form-label">Product Price</label>
    <input type="number" name="price" class="form-control" value="{{prod.price}}" id="price">
  </div>
  <div class="row">
    <button type="submit" class="btn btn-primary m-3">UPDATE</button>
    <a class="btn btn-danger m-3 mt-0 w-100" href="/product/delete/{{prod.slug}}">DELETE</a>
  </div>

</form>