<form class="m-4 mt-0" method="POST" action="{{prod._id}}">
  <div class="mb-3">
    <label for="name" class="form-label">Product Name</label>
    <input type="text" name="name" class="form-control" value="{{prod.name}}" id="name" disabled>
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Product Description</label>
    <textarea name="description" class="form-control" id="description" disabled>{{prod.description}}</textarea>
  </div>
  <div class="mb-3">
    <label for="manufacturer" class="form-label">Product Manufacturer</label>
    <input type="text" name="manufacturer" class="form-control" id="manufacturer" value="{{prod.material}}" disabled>
  </div>
  <div class="mb-3">
    <label for="material" class="form-label">Product Material</label>
    <input type="text" name="material" class="form-control" id="material" value="{{prod.material}}" disabled>
  </div>
  <div class="mb-3">
    <label for="formFile" class="form-label">Product Image</label>
    <br>
    <img src="/img/{{prod.image}}" class="img-fluid" style="max-height: 600px" alt="">
  </div>
  <div class="mb-3">
    <label for="price" class="form-label">Product Price</label>
    <input type="number" name="price" class="form-control" value="{{prod.price}}" id="price" disabled>
  </div>
  <div class="mb-3">
    <label for="stock" class="form-label">Product Stock</label>
    <input type="number" name="stock" class="form-control" id="stock" value="1" min="1">
  </div>
  <div class="mb-3">
    <label for="import" class="form-label">Total Import Product Price</label>
    <input type="text" name="import" class="form-control" id="import">
  </div>
  <div class="mb-3">
    <label for="shop" class="form-label">Shop</label>
    <select class="form-select" name="shop" aria-label="--- Select Shop ----">
      {{#each shops}}
      <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </div>
  <div class="row">
    <button type="submit" class="btn btn-primary m-3">ADD MORE</button>
  </div>
</form>